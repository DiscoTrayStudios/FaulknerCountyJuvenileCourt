@page
@model FalknerCountyJuvenileCourt.Pages.Juveniles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Juvenile</h4>
    <hr />
    <dl class="row">
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Juvenile.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Juvenile.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Juvenile.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Juvenile.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Juvenile.Race)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Juvenile.Race)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Juvenile.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Juvenile.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Juvenile.Risk)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Juvenile.Risk)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Juvenile.Repeat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Juvenile.Repeat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Juvenile.Crimes)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Crime</th>
                    <th>Date</th>
                </tr>
                @foreach (var item in Model.Juvenile.Crimes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
