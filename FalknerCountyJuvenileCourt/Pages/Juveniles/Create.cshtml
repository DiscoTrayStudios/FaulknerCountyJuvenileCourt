@page
@model FalknerCountyJuvenileCourt.Pages.Juveniles.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div id=bottom>
    Here you are able to create a new juvenile to be assigned to a crime.
</div>

<h1>Create</h1>

<h4>Juvenile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Juvenile.ID" class="control-label"></label>
                <input asp-for="Juvenile.ID" class="form-control" />
                <span asp-validation-for="Juvenile.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Juvenile.Age" class="control-label"></label>
                <input asp-for="Juvenile.Age" class="form-control" />
                <span asp-validation-for="Juvenile.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Juvenile.Race" class="control-label"></label>
                <select asp-for="Juvenile.RaceID" class="form-control"
                        asp-items="@Model.RaceNameSL">
                    <option value="">-- Select one --</option>
                </select>
                <span asp-validation-for="Juvenile.RaceID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Juvenile.Gender" class="control-label"></label>
                <select asp-for="Juvenile.GenderID" class="form-control"
                        asp-items="@Model.GenderNameSL">
                    <option value="">-- Select one --</option>
                </select>
                <span asp-validation-for="Juvenile.GenderID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Juvenile.Risk" class="control-label"></label>
                <select asp-for="Juvenile.RiskID" class="form-control"
                        asp-items="@Model.RiskNameSL">
                    <option value="">-- Select one --</option>
                </select>
                <span asp-validation-for="Juvenile.RiskID" class="text-danger" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Juvenile.Repeat" /> @Html.DisplayNameFor(model => model.Juvenile.Repeat)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
