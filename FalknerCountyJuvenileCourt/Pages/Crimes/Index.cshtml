@page
@model FalknerCountyJuvenileCourt.Pages.Crimes.IndexModel

@{
    ViewData["Title"] = "Crimes";
}
<body>
<h1>Crimes</h1>

<p>
    <a id="Cbtn" asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by ID:
            <input type="text" name="SearchID" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a id="Back_To_List" asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.IDSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].ID)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.JuvenileSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].Juvenile)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.OffenseSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].Offense)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.IntakeSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].IntakeDecision)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.FilingSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].FilingDecision)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.SchoolSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].School)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.DOffenseSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].DrugOffense)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.DCourtSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].DrugCourt)
               </a>
            </th>
            <th>
                <a id="Back_To_List" asp-page="./Index" asp-route-sortOrder="@Model.DateSort"
                  asp-route-currentFilter="@Model.CurrentFilter">
                  @Html.DisplayNameFor(model => model.Crimes[0].Date)
               </a>
            </th>
            <th></th>
        </tr>
    </thead>
        </body>
    <tbody>
@foreach (var item in Model.Crimes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Juvenile.FaulknerCountyIdentification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offense.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntakeDecision.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilingDecision.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrugOffense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrugCourt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a id="EDbtn" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a id="EDbtn" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a id="EDbtn" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.Crimes.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Crimes.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Crimes.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   id="NP" class="btn btn-primary @prevDisabled">
   Previous
</a>
<a asp-page="./Index"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Crimes.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   id="NP" class="btn btn-primary @nextDisabled">
   Next
</a>
