@page
@model FalknerCountyJuvenileCourt.Pages.Crimes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Crime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Crime.Juvenile.ID" />
            <div class="form-group">
                <label asp-for="Crime.Juvenile" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Crime.Juvenile.ID)</div>
            </div>
            <div class="form-group">
                <label asp-for="Crime.Offense" class="control-label"></label>
                <select asp-for="Crime.Offense.ID" class="form-control" 
                        asp-items="@Model.OffenseNameSL"></select>
                <span asp-validation-for="Crime.Offense.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.IntakeDecision" class="control-label"></label>
                <select asp-for="Crime.IntakeDecision.ID" class="form-control" 
                        asp-items="@Model.IntakeNameSL"></select>
                <span asp-validation-for="Crime.IntakeDecision.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.FilingDecision" class="control-label"></label>
                <select asp-for="Crime.FilingDecision.ID" class="form-control" 
                        asp-items="@Model.FilingNameSL"></select>
                <span asp-validation-for="Crime.FilingDecision.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.School" class="control-label"></label>
                <select asp-for="Crime.School.ID" class="form-control" 
                        asp-items="@Model.SchoolNameSL"></select>
                <span asp-validation-for="Crime.School.ID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Crime.DrugOffense" /> @Html.DisplayNameFor(model => model.Crime.DrugOffense)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Crime.DrugCourt" /> @Html.DisplayNameFor(model => model.Crime.DrugCourt)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Crime.Date" class="control-label"></label>
                <input asp-for="Crime.Date" class="form-control" />
                <span asp-validation-for="Crime.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
