@page
@model FalknerCountyJuvenileCourt.Pages.Crimes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Crime</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Crime.ID" />
            <div class="form-group">
                <label asp-for="Crime.JuvenileID" class="control-label"></label>
                <select asp-for="Crime.JuvenileID" class="form-control" asp-items="ViewBag.JuvenileID"></select>
                <span asp-validation-for="Crime.JuvenileID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.CrimeTypeID" class="control-label"></label>
                <select asp-for="Crime.CrimeTypeID" class="form-control" asp-items="ViewBag.CrimeTypeID"></select>
                <span asp-validation-for="Crime.CrimeTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.FilingDecisionID" class="control-label"></label>
                <select asp-for="Crime.FilingDecisionID" class="form-control" asp-items="ViewBag.FilingDecisionID"></select>
                <span asp-validation-for="Crime.FilingDecisionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.IntakeDecisionID" class="control-label"></label>
                <select asp-for="Crime.IntakeDecisionID" class="form-control" asp-items="ViewBag.IntakeDecisionID"></select>
                <span asp-validation-for="Crime.IntakeDecisionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Crime.SchoolID" class="control-label"></label>
                <select asp-for="Crime.SchoolID" class="form-control" asp-items="ViewBag.SchoolID"></select>
                <span asp-validation-for="Crime.SchoolID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Crime.DrugOffense" /> @Html.DisplayNameFor(model => model.Crime.DrugOffense)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Crime.DrugCourt" /> @Html.DisplayNameFor(model => model.Crime.DrugCourt)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Crime.Date" class="control-label"></label>
                <input asp-for="Crime.Date" class="form-control" />
                <span asp-validation-for="Crime.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
