@page
@model FalknerCountyJuvenileCourt.Pages.Offenses.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<head>
    <style>
        #bottom {
      position: absolute;
      bottom: 0;
      width: 100%;
      background: white;
      text-align: center;
      padding: 10px 0;
    }
    </style>
</head>
<div id=bottom>
    Here you are able to delete a offense from being assigned to a juvenile.
</div>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Offense</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Offense)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Offense.Name)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Offense.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
