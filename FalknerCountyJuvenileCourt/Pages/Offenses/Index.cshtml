@page
@model FalknerCountyJuvenileCourt.Pages.Offenses.IndexModel

@{
    ViewData["Title"] = "Offenses";
}

<div id=bottom>
    Here you are able to view possible offenses.
</div>

<h1>Offenses</h1>

<p>
    <a id="Cbtn" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Offenses)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Offenses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a id="EDbtn" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a id="EDbtn" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
